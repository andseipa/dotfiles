#   i3bar_command ~/.config/i3/lemonbar/i3_lemonbar.sh
# }

bar {
	position top
	height 80
	i3bar_command i3bar -t

	colors {
		background $transp
		statusline $transp
		separator $transp

		focused_workspace		$transp		$transp			$transp
		active_workspace 		$transp		$transp			$transp
		inactive_workspace		$transp		$transp			$transp
		urgent_workspace		$transp		$transp			$transp
	}
}

