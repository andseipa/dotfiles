   client.focused              		#12fee7 #12fee7 #ebdbb2 #12fee7
   client.focused_inactive     	#C2CBFF #C2CBFF #ebdbb2 #C2CBFF
   client.unfocused            		#C2CBFF #C2CBFF #ebdbb2 #C2CBFF
   client.urgent               		#F97EC6 #F97EC6 #ee0000 #F97EC6


