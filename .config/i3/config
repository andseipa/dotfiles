# Constants
  set $mod Mod4

# Window border multiplier.
  set $borders    2

# Number of pixels to resize by in resize mode.
  set $resize     2

  #set $base00 #101218
  #set $base01 #1f222d
  #set $base02 #252936
  #set $base03 #7780a1
  #set $base04 #C0C5CE
